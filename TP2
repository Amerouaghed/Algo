#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Fonction pour charger une chaîne de caractères
char *ChargerChaine(int N) {
    char *chaine = (char *)malloc(N * sizeof(char));
    if (chaine == NULL) {
        printf("Erreur d'allocation mémoire.\n");
        exit(1);
    }
    printf("Veuillez saisir la chaîne de caractères : ");
    scanf("%s", chaine);
    return chaine;
}

// Fonction pour calculer la longueur d'une chaîne
int Longueur(char *ch) {
    return strlen(ch);
}

// Procédure pour charger la chaîne lue dans un tableau
void ChargerTab(char *p, char Tab[]) {
    strcpy(Tab, p);
}

// Procédure pour inverser un tableau de caractères
void InverserTab(char Tab[], char T[], int m) {
    for (int i = 0; i < m; i++) {
        T[i] = Tab[m - 1 - i];
    }
    T[m] = '\0'; // Ajouter le caractère nul à la fin
}

// Procédure pour afficher un tableau de caractères
void AfficherTab(char Tab[], int m) {
    printf("Contenu du tableau : %s\n", Tab);
}

// Programme principal
int main() {
    char *ch;
    int n;
    
    printf("Veuillez saisir la taille maximale de la chaîne :\n");
    scanf("%d", &n);
    
    ch = ChargerChaine(n);
    int m = Longueur(ch);
    
    char Tab[m + 1]; // +1 pour le caractère nul
    char T[m + 1];   // +1 pour le caractère nul
    
    ChargerTab(ch, Tab);
    AfficherTab(Tab, m);
    
    InverserTab(Tab, T, m);
    AfficherTab(T, m);
    
    free(ch); // Libérer la mémoire allouée pour ch
    return 0;}





#include <stdio.h>
#include <string.h>
#include <stdlib.h>

char *ChargerChaine(int N) {
    return (char *)malloc(N * sizeof(char));
}

int Longueur(char *ch) {
    return strlen(ch);
}

void ChargerTab(char *p, char Tab[]) {
    strcpy(Tab, p);
}

void AfficherTab(char Tab[], int m) {
    for (int i = 0; i < m; i++) {
        printf("%c", Tab[i]);
    }
    printf("\n");
}

void InverserTab(char Tab[], char T[], int m) {
    for (int i = 0; i < m; i++) {
        T[i] = Tab[m - i - 1];
    }
}

int main() {
    char *ch;
    int n;
    printf("veuillez saisir la taille maximale de la chaine:\n");
    scanf("%d", &n);
    ch = ChargerChaine(n);
    printf("Entrez la chaine:\n");
    scanf("%s", ch);

    int m = Longueur(ch);
    char Tab[m], T[m];

    ChargerTab(ch, Tab);
    AfficherTab(Tab, m);

    InverserTab(Tab, T, m);
    AfficherTab(T, m);

    free(ch);
    return 0;
}