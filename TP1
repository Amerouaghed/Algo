printf ("\n diagonale secondaire:\n");


  for(i = 0 ; i < 5 ; i ++){
 printf("%c\t",M[i][4-i]);
  }
  printf("\n");





    int T[4][4];
    int temp;
    

    //  
    printf("\n original T: \n");
    for ( i = 0; i < 4; i++) {
        for ( j = 0; j < 4; j++) {
            printf("%d ", T[i][j]);
        }
        printf("\n");
    }

     //
    for ( i = 0; i < 4; i++) {
        for ( j = 0; j < i; j++) {
             temp = T[i][j];
            T[i][j] = T[j][i];
            T[j][i] = temp;
        }
    }

    //  
    printf("\n apre changement: \n");
    for (  i = 0; i < 4; i++) {
        for ( j = 0; j < 4; j++) {
            printf("%d ", T[i][j]);
        }
        printf("\n");
    }

