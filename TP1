#include <stdio.h>
int main()
{ 
 int   i , j , n = 0 ;
    int X ;    
    char M[5][5] =
    {
        {'1','2','3','4','5'},
        {'7','a','c','8','d'},
        {'c','9','4','z','8'},
        {'5','6','p','n','3'},
        {'2','9','t','m','k'}
    };
    // matrice M:
    for(i = 0 ; i < 5 ; i++)
    {
     printf("\n");
        for(j = 0 ; j < 5 ; j++)
                   
            printf("%c\t",M[i][j]);
            
     }  
        printf("\n\n");
    //  lignes d'indice pair:
for(i = 0 ; i < 5 ; i += 2)
     {
         for(j = 0 ; j < 5 ; j ++)
           printf("%c\t",M[i][j]);  
         
         printf("\n");
     }  
     printf("\n\n");
    // lignes d'indice impair:
     for(i = 2 ; i < 5 ; i++ )
     {
         for(j = 0 ; j < 5 ; j ++)
           printf("%c\t",M[i][j]);  
         printf("\n");
     }
    printf("\n");
//
 for(i = 0 ; i < 5 ; i ++)
 {
 printf("%c\t",M[i][i]);
 }

  printf("\n");
//
  for(i = 0 ; i < 5 ; i ++){
 printf("%c\t",M[i][4-i]);
  }
  printf("\n");
}
