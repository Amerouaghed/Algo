#include <stdio.h>
int main()
{ 
 int   i , j   ;
      
    char M[5][5] =
    {
        {'1','2','3','4','5'},
        {'7','a','c','8','d'},
        {'c','9','4','z','8'},
        {'5','6','p','n','3'},
        {'2','9','t','m','k'}
    };
    // matrice M:
    for(i = 0 ; i < 5 ; i++)
    {
     printf("\n");
        for(j = 0 ; j < 5 ; j++)

            printf("%c\t",M[i][j]);

     }  
        printf("\n\n");
    //  lignes d'indice pair:
for(i = 0 ; i < 5 ; i += 2)
     {
         for(j = 0 ; j < 5 ; j ++)
           printf("%c\t",M[i][j]);  

         printf("\n");
     }  
     printf("\n\n");
    // lignes d'indice impair:
      
    
    for (int i = 0; i < 5; i++) {
        for (int j = 1; j < 5; j += 2) {
            printf("%c ", M[i][j]);
        }
        printf("\n");
    }
    
    
    printf("\n");
//
 for(i = 0 ; i < 5 ; i ++)
 {
 printf("%c\t",M[i][i]);
 }

  printf("\n");
//
  for(i = 0 ; i < 5 ; i ++){
 printf("%c\t",M[i][4-i]);
  }
  printf("\n");





    int T[4][4];
    int temp;
    //   من المستخدم
    printf(" %dx%d : \n", 4, 4);
    for (  i = 0; i < 4; i++) {
        for ( j = 0; j < 4; j++) {
            printf("T[%d][%d]: ", i, j);
            scanf("%d", &T[i][j]);
        }
    }

    //  الأصلية
    printf("\n : \n");
    for ( i = 0; i < 4; i++) {
        for ( j = 0; j < 4; j++) {
            printf("%d ", T[i][j]);
        }
        printf("\n");
    }

     //.   تبديل    
    for ( i = 0; i < 4; i++) {
        for ( j = 0; j < i; j++) {
             temp = T[i][j];
            T[i][j] = T[j][i];
            T[j][i] = temp;
        }
    }

    //  بعد التبديل
    printf("\n : \n");
    for (  i = 0; i < 4; i++) {
        for ( j = 0; j < 4; j++) {
            printf("%d ", T[i][j]);
        }
        printf("\n");
    }

    return 0;
}
