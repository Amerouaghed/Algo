    };
    // matrice M:
    for(i = 0 ; i < 5 ; i++)
    {
     printf("\n");
        for(j = 0 ; j < 5 ; j++)

            printf("%c\t",M[i][j]);

     }  
        printf("\n\n");
    //  lignes d'indice pair:
for(i = 0 ; i < 5 ; i += 2)
     {
         for(j = 0 ; j < 5 ; j ++)
           printf("%c\t",M[i][j]);  

         printf("\n");
     }  
     printf("\n\n");
    // lignes d'indice impair:
      
    
    for (int i = 0; i < 5; i++) {
        for (int j = 1; j < 5; j += 2) {
            printf("%c ", M[i][j]);
        }
        printf("\n");
    }
    
    
    printf("\n");
// 

printf ( "diagonale principale:")

 for(i = 0 ; i < 5 ; i ++)
 {
 printf("%c\t",M[i][i]);
 }

  printf("\n");
